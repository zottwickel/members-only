<% provide(:title, "New post") %>
<h1>New Post</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@post) do |f| %>

			<%= f.label :subject %>
			<%= f.text_field :subject, class: 'form-control' %>

			<%= f.label :body %>
			<%= f.text_area :body, class: 'form-control' %>

			<%= f.submit "Create post", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>